{
  "verbose": true,
  "ignore": [
    "node_modules",
    "dist",
    "*.test.js"
  ],
  "watch": [
    "src/app.js",
    "src/api/*.js",
    "src/config/*.js",
    "src/db/*.js",
    "src/pages/_document.js",
    "src/server/*.js"
  ],
  "ext": "js json",
  "execMap": {
    "js": "babel-node",
    "jsx": "babel-node"
  }
}
